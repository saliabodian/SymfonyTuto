{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>

        {{ 'This friendly message is coming from:✅'|rainbow }}
        <ul>
            <li>Your controller at <code><a href="{{ 'src/Controller/HomepageController.php'|file_link(0) }}">src/Controller/HomepageController.php</a></code></li>
            <li>Your template at <code><a href="{{ 'templates/homepage/index.html.twig'|file_link(0) }}">templates/homepage/index.html.twig</a></code></li>
        </ul>
    </div>


    {# Macros #}

    {% import 'macros/form.html.twig' as form_macros %}

    <form>
        {% for i in 1..10 %}
            {{ form_macros.widget('name ' ~ i, 'label ' ~ i) }}
        {% endfor %}
    </form>

    {# Embed #}
    {% embed 'embed/article.html.twig' %}
        {% block more %}
            <div>
                <a href="#">
                    Read more
                </a>
            </div>
        {% endblock %}

    {% endembed %}

{% endblock %}
